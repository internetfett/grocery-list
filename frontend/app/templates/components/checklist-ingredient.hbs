{{#if isEditing}}
    {{input type='text' class='edit' focus-out='save' value=model.ingredient.name}}
{{else}}
    <input type='checkbox' id='ingredient_{{model.id}}' checked={{model.status}} onchange={{action 'toggleStatus'}}>
    <label class='checkbox checkbox-green' for='ingredient_{{model.id}}'></label>
    <span {{action 'edit' on='doubleClick'}}>{{model.ingredient.name}} ({{model.display_amount}}{{#if isUnit}} {{model.unit}}{{/if}})</span>
    {{#if model.status}}
        <button {{action 'remove'}} class='destroy'>X</button>
    {{/if}}
{{/if}}
