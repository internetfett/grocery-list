{{#if isEditing}}
    {{input type='text' class='edit' focus-out='save' value=model.ingredient.name}}
{{else}}
    <input type='checkbox' checked={{model.status}} class='toggle' onchange={{action 'toggleStatus' model}}>
    <label {{action 'edit' on='doubleClick'}}>{{model.display_amount}}{{#if isUnit}} {{model.unit}}{{/if}} {{model.ingredient.name}}</label>
    <button {{action 'remove' model}} class='destroy'>x</button>
{{/if}}
